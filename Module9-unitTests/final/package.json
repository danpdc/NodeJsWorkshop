{
  "name": "mylibrary",
  "version": "1.0.0",
  "description": "API back end for a library management tool",
  "main": "index.js",
  "scripts": {
    "test": "mocha tests/**/*.spec.js",
    "start": "set DEBUG=app & nodemon src/index.js",
    "test-dtos": "mocha tests/dtoTests/*.spec.js",
    "test-controllers": "mocha tests/controllerTests/*.spec.js",
    "test-mappers": "mocha tests/mapperTests/*.spec.js"
  },
  "keywords": [
    "nodejs",
    "library",
    "api",
    "express"
  ],
  "author": "Dan Patrasc-Baba",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "chai-as-promised": "^7.1.1",
    "chalk": "^2.4.2",
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "mongoose": "^5.6.10",
    "morgan": "^1.9.1",
    "sequelize": "^5.16.0",
    "sqlite3": "^4.1.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^6.2.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "mocha": "^6.2.0",
    "node-mocks-http": "^1.7.6",
    "nodemon": "^1.19.1",
    "sinon": "^7.4.1"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node_modules\\**\\node_modules"
    ],
    "delay": "2500",
    "env": {
      "NODE_ENV": "development",
      "PORT": "6201"
    }
  }
}
